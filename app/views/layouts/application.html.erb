<!DOCTYPE html>
<html>
  <head>
    <title>Contacts Manager</title>
   <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>

  </head>

  <body>
  <nav class="navbar navbar-dark navbar-fixed-top bg-primary" >
      <div class="container">
        <div class="navbar-header">
         

          <%= link_to "Contact Manager", root_path, class: "navbar-brand text-uppercase" %>          
        </div>
        <!-- /.navbar-header -->

      
        <% if user_signed_in? %>
          <div class="collapse navbar-collapse" id="navbar-collapse">
          
            <div class="navbar-nav navbar-right nav btn">

            <%= link_to edit_user_registration_path, class: "btn btn-default" do %>
            <i class="fas fa-user-edit"></i> 
            Edit Profile
          <% end %>  
            
             <%= link_to destroy_user_session_path, :method => 'delete' , class: "btn btn-default" do%>
            <i class="glyphicon glyphicon-log-out"></i> 
            Logout
          <% end %>
            
            
          </div>
        <% else %>
          <div class="collapse navbar-collapse" id="navbar-collapse">
          
            <div class="navbar-nav navbar-right nav btn">

            <%= link_to root_path(resource_name),class: "btn btn-default" do%>
            <i class="fas fa-sign-in-alt"></i>&nbsp;Login
            <% end %>
            
            <%= link_to  new_registration_path(resource_name) , class: "btn btn-default" do%>
            <span class="nav-link"><i class="fas fa-user-plus"></i>&nbsp;Register</span>
            <% end %>
            
            
          </div>

        <% end %>
      </div>
    </nav>
    <div class="container">

          <!--Flash Messages-->
          <% flash.each do |type, message| %>
            
              <%= content_tag :div, class: "alert alert-#{type} alert-dismissible", role: "alert" do %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%= message %>
              <% end %> 
             
          <% end %> 

          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
