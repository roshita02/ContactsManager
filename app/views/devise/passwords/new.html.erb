<div class="panel panel-default custom-panel-position">
  <div class="panel-heading text-center">
    <h4>Forgot password</h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"%>
      </div>

      <div class="actions text-left">
        <%= f.submit "Reset Password" ,class: "btn btn-primary"%>
      </div>
    <% end %>     
  </div>
  <div class="panel-footer">
    <%= link_to "Login", new_session_path(resource_name) , class: "text-center", style:"margin-right: 200px"%>
    <%= link_to "Create an Account", new_registration_path(resource_name) , class: "text-center"%>
  </div>
</div>