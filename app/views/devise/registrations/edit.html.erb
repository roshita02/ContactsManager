<div class="panel panel-default">
  <div class="panel-heading">
    <h1><i class="fas fa-user-edit"></i> Edit Profile</h1>
  </div>
  <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
         

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style:"width : 66%" %>
          </div>



          <div class="form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" , style:"width : 66%" %>
           
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style:"width : 66%" %>
          </div>

          <div class="form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password" , class: "form-control", style:"width : 66%" %>
          </div>
       
    

        <div class="form-inline">
              <%= f.submit "Update" ,class: "btn btn-primary" %>
              
              <%= link_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %> 
              <%= link_to "Back", contacts_path ,class: "btn btn-default"%>             
            
        </div>
    </div>
  </div>
<% end %>
</div>  