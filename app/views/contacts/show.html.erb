<div class="panel panel-default">
    <div class="panel-heading">
     <h1>Contact details</h1>
    </div> 
        
  <div class="panel-body">
    
    <div class="form-group">
        <h2><strong><%= @contact.firstname.upcase %>  <%= @contact.lastname.upcase %> </strong> </h2>
    </div>

    <div class="form-group">
        <label class="control-label">Phone</label> 
        <% if @contact.phone.present? %>
            <% @contact.phone.each do |b| %>
                <% if !b.phone.empty? %>
                  <div class="adderfield">
                      <label class="control-label"> <%= b.label %> : </label>            
                      <%= b.phone %>        
                  </div> 
                <% end %> 
            <% end %>
        <% end %>
    </div>
    <hr>

    <div class="form-group">
        <label class="control-label">Email</label> 
        <% if @contact.email.present? %>
            <% @contact.email.each do |b| %>
                <% if !b.email.empty? %>
                  <div class="adderfield">
                      <label class="control-label"> <%= b.label %> : </label>            
                      <%= b.email %>        
                  </div> 
                <% end %> 
            <% end %>
        <% end %>
    </div>
    <hr>

    <div class="form-group">
        <label class="control-label">Address</label> 
        <div><%= @contact.address %></div>
    </div>

    <div class="form-group">          
        <%= link_to "Edit", edit_contact_path, class: "btn btn-primary" %>
        <%= link_to "Delete", contact_path,:method => :delete, class: "btn btn-danger", title: "Delete", data: { confirm: "Are you sure ?" }%> 
         <%= link_to "Back", contacts_path, class: "btn btn-primary" %>            
    </div>
</div>